{
 "scenarios": {
  "blazedemo": {
   "headers": {
    "Upgrade-Insecure-Requests": "1"
   }, 
   "requests": [
    {
     "url": "http://blazedemo.com/", 
     "method": "GET", 
     "label": "Welcome Page"
    }, 
    {
     "url": "http://blazedemo.com/reserve.php", 
     "body": {
      "toPort": "Berlin", 
      "fromPort": "Boston"
     }, 
     "method": "POST", 
     "label": "Reserve Page"
    }, 
    {
     "url": "http://blazedemo.com/purchase.php", 
     "body": {
      "toPort": "Berlin", 
      "fromPort": "Boston", 
      "price": "472.56", 
      "flight": "43", 
      "airline": "Virgin America"
     }, 
     "method": "POST", 
     "label": "Purchase Page"
    }, 
    {
     "url": "http://blazedemo.com/", 
     "body": {
      "totally_fake_param": "totally_fake_value"
     }, 
     "method": "POST", 
     "label": "posting to welcome"
    }, 
    {
     "url": "http://blazedemo.com/confirmation.php", 
     "method": "GET", 
     "label": "Confirmation Page"
    }
   ], 
   "retrieve-resources": false
  }
 }, 
 "execution": [
  {
   "ramp-up": "30s", 
   "concurrency": {
    "local": 50, 
    "cloud": 500
   }, 
   "hold-for": "5m", 
   "scenario": "blazedemo", 
   "executor": "jmeter"
  }
 ], 
 "modules": {
  "blazemeter": {
   "token": "********"
  }
 }, 
 "reporting": [
  {
   "module": "final-stats", 
   "dump-xml": "stats.xml", 
   "summary": true
  }
 ]
}
